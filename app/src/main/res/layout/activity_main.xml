<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/teal_200">

    <!-- DHT11 Section -->
    <TextView
        android:id="@+id/titleDHT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DHT11"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:id="@+id/gridLayoutDHT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_below="@id/titleDHT"
        android:background="@color/teal_200">

        <TextView
            android:text="Temperature DHT11 : "
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tempDHT"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#E91E63"
            />

        <TextView
            android:text="Humidity DHT11: "
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/humDHT"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            />

    </GridLayout>

    <!-- BMP280 Section -->
    <TextView
        android:id="@+id/titleBMP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMP280"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_below="@id/gridLayoutDHT"
        android:layout_marginTop="20dp" />

    <GridLayout
        android:id="@+id/gridLayoutBMP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_below="@id/titleBMP"
        android:background="@color/teal_200">

        <TextView
            android:text="Temperature BMP280 : "
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tempBMP"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#E91E63"
            />

        <TextView
            android:text="Pressure BMP280: "
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pressureBMP"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            />

    </GridLayout>

</RelativeLayout>
